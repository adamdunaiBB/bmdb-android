<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_default"
    tools:context="hu.blackbelt.bmdb_android.about.AboutActivity">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/margin_default"
        android:textSize="@dimen/font_big"
        android:textStyle="bold"
        tools:text="The Shawshank Redemption" />

    <ImageView
        android:id="@+id/about_image"
        android:layout_width="@dimen/imageview_width_about"
        android:layout_height="@dimen/imageview_height_about"
        android:layout_below="@id/about_title"
        android:layout_marginEnd="@dimen/margin_default"
        tools:src="@drawable/the_shawshank_redemption" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_title"
        android:layout_toEndOf="@id/about_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_default"
            tools:text="Year: 1994" />

        <TextView
            android:id="@+id/about_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_default"
            tools:text="Genre: Crime, Drama" />

    </LinearLayout>

    <TextView
        android:id="@+id/about_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_image"
        android:paddingTop="@dimen/margin_default"
        android:textSize="@dimen/font_default"
        tools:text="Two imprisoned men bond over a number of years, finding solace and eventual redemption through acts of common decency." />

</RelativeLayout>
